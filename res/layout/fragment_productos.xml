<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="FragmentProductosBinding" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/backPrincipal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@null"
            app:srcCompat="@drawable/ylp_ico_off" />

        <RelativeLayout
            android:id="@+id/layoutLoginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >

            <LinearLayout
                android:id="@+id/monto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="$"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="30dp"
                android:background="@null"
                android:fontFamily="@font/akzidenzgrotesk_light"
                android:textColor="@color/greenYLP" />

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:padding="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="0.00"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="50dp"
                android:fontFamily="@font/akzidenzgrotesk_lightcond"
                android:textColor="@color/greenYLP"
                android:textColorHint="@color/greenYLP"
                android:focusable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/monto"
                android:layout_above="@+id/secCobrar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/modventa"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/addventa"
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <EditText
                    android:id="@+id/producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890-_./ "
                    android:hint="Concepto"
                    android:inputType="textPersonName"
                    android:maxLength="255"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/akzidenzgrotesk_light"
                    android:textColor="@color/grgray"
                    android:textColorHint="@color/grgray" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:stretchColumns="1"
                    >
                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        >
                        <ImageButton
                            android:id="@+id/down_count"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@null"
                            app:srcCompat="@drawable/ylp_ico_down" />
                        <TextView
                            android:id="@+id/cantidad"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="Cantidad"
                            android:inputType="number"
                            android:maxLength="5"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/akzidenzgrotesk_light"
                            android:textColor="@color/grgray"
                            android:textColorHint="@color/grgray"
                            android:background="@drawable/cantidad_bg_textview"/>
                        <ImageButton
                            android:id="@+id/up_count"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@null"
                            app:srcCompat="@drawable/ylp_ico_up" />
                    </TableRow>

                </TableLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:stretchColumns="*"
                    android:shrinkColumns="*"
                    >
                    <TableRow
                        android:id="@+id/table2Row0"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        >
                        <Button
                            android:id="@+id/btn_digit_1"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:text="1"/>
                        <Button
                            android:id="@+id/btn_digit_2"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="2"/>
                        <Button
                            android:id="@+id/btn_digit_3"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="3"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/table2Row2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        >
                        <Button
                            android:id="@+id/btn_digit_4"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"

                            android:text="4"/>
                        <Button
                            android:id="@+id/btn_digit_5"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="5"/>
                        <Button
                            android:id="@+id/btn_digit_6"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="6"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/table2Row3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        >
                        <Button
                            android:id="@+id/btn_digit_7"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="7"/>
                        <Button
                            android:id="@+id/btn_digit_8"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="8"/>
                        <Button
                            android:id="@+id/btn_digit_9"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="9"/>
                    </TableRow>
                    <TableRow
                        android:id="@+id/table2Row4"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        >
                        <Button
                            android:id="@+id/btn_digit_addcar"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_keyshop"
                            style="@style/btnButtonProductos"/>
                        <Button
                            android:id="@+id/btn_digit_0"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/white_bg_button_prod"
                            style="@style/btnButtonProductos"
                            android:text="0"/>
                        <Button
                            android:id="@+id/btn_digit_del"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:background="@drawable/white_bg_button_keydel"
                            style="@style/btnButtonProductos"
                            />
                    </TableRow>

                </TableLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/secCobrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"        >
                <Button
                    android:id="@+id/btn_digit_cobrar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@drawable/green_bg_button_prod"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:text="Cobrar $0.0"
                    style="@style/btnButtonProductosGreen"/>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</layout>