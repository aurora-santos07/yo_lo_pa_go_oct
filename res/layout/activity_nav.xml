<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.yolopago.pago.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"


        >
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        app:itemRippleColor="@color/greenYLP"
        android:background="@color/colorPrimary"
        android:layout_height="45dp">

        <ImageButton
            android:id="@+id/navigation_cobro"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:focusable="true"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ylp_dr_cobro" />

        <ImageButton
            android:id="@+id/navigation_trans"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ylp_dr_trans" />

        <ImageButton
            android:id="@+id/navigation_servicios"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ylp_dr_servicios" />


        <ImageButton
            android:id="@+id/navigation_shop"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ylp_dr_shop" />

    </LinearLayout>

</RelativeLayout>