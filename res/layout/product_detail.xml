<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="ProductDetailBinding" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/secHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:background="#ffffff"          >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@null"
                app:srcCompat="@drawable/ylp_ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:text="Detalle de Producto"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="10pt"
                android:fontFamily="@font/akzidenzgrotesk_light"
                android:textColor="@color/grgray"/>

            <ImageButton
                android:id="@+id/cancelarProducto"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@null"
                app:srcCompat="@drawable/ylp_ico_trash" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/secHeader"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="Concepto"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/concepto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:digits="abcdefghijklmnñopqrstuvwxyzABCDEFGHIJKLMNÑOPQRSTUVWXYZ1234567890-_./ "
                    android:singleLine="false"
                    android:maxLength="255"
                    android:layout_margin="2dp"
                    android:textColor="@color/grgray"
                    android:fontFamily="@font/akzidenzgrotesk_light"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="Precio unitario"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:inputType="number"
                        android:text="$"
                        android:singleLine="true"
                        android:layout_margin="2dp"
                        android:textColor="@color/grgray"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/precio_unitario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/grgray"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="15dp"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="Cantidad"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="15dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginRight="100dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/grgray"
                    android:fontFamily="@font/akzidenzgrotesk_light"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/up_count"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@null"
                        app:srcCompat="@drawable/ylp_ico_up" />
                    <ImageButton
                        android:id="@+id/down_count"
                        android:layout_width="25dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@null"
                        app:srcCompat="@drawable/ylp_ico_down" />
                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="Total"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/total_prod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_margin="2dp"
                    android:textColor="@color/grgray"
                    android:fontFamily="@font/akzidenzgrotesk_light"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_guardar_producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@drawable/white_bg_item"
                    android:textColor="@color/blueYLP"
                    android:text="Guardar"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>