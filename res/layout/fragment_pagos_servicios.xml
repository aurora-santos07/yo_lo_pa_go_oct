<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="FragmentPagoServiciosBinding" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/secHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"          >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@null"
                app:srcCompat="@drawable/ylp_ico_back" />

            <TextView
                android:id="@+id/cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:text="Pagos Servicios"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="10pt"
                android:fontFamily="@font/akzidenzgrotesk_light"
                android:textColor="@color/grgray"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/secHeader"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="match_parent"
                android:layout_height="313dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:src="@drawable/ylp_img_proximamente" />

        </LinearLayout>




    </RelativeLayout>
</layout>