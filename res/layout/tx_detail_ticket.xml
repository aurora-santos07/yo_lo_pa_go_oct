<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="TicketDetailBinding" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/secHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"          >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@null"
                app:srcCompat="@drawable/ylp_ico_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:text="Ticket de compra"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="10pt"
                android:fontFamily="@font/akzidenzgrotesk_light"
                android:textColor="@color/grgray"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/secHeader"
            android:background="@null"
            android:paddingBottom="7dp"
            android:orientation="vertical">
            <com.wizarpos.emvsample.activity.HeaderTicketView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
            <LinearLayout
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_brand_card"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ylp_logo_yolo"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="7dp">


                <TextView
                    android:id="@+id/comercio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="Comercio"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:autoSizeMinTextSize="1dp"
                    android:text="direccion direccon direccion"
                    android:textAlignment="textEnd"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/rfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:inputType="number"
                    android:text="RFC:"
                    android:singleLine="true"
                    android:layout_margin="2dp"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:inputType="number"
                    android:text="Nombre Operador Sucursal"
                    android:singleLine="true"
                    android:layout_margin="2dp"
                    android:textColor="@color/darkGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/operador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:inputType="number"
                    android:text="Nombre Operador Sucursal"
                    android:singleLine="true"
                    android:layout_margin="2dp"
                    android:textColor="@color/midleYGrayYLP"
                    android:fontFamily="@font/akzidenzgrotesk_regular"
                    android:textSize="12dp"/>
            </LinearLayout>

            </LinearLayout>
            <View
                android:id="@+id/dot_image"
                android:layout_below="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/dot_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layerType="software" />
            <ListView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/data"
                android:layout_above="@+id/cifras"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="3dp"
                android:divider="@color/colorPrimary"
                android:dividerHeight="0dp"
                android:background="@drawable/bg_list_view_item_ticket">

            </ListView>
            <View
                android:id="@+id/dot_image2"
                android:layout_below="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dot_line"
                android:layerType="software" />
            <TableLayout
                android:id="@+id/cifras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="3dp"
                android:layout_above="@+id/sec_btn"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="IVA 16%"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/monto_iva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text=""
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/grgray"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="12dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="Total"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/monto_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="$0.0"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/midleYGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="12dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="Efectivo"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/monto_efectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text=""
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/grgray"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="Cambio"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/monto_cambio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text=""
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/grgray"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="15dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="Total Articulos"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/total_articulos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:inputType="number"
                        android:text="$0.0"
                        android:singleLine="true"
                        android:layout_weight="2"
                        android:textColor="@color/midleYGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_light"
                        android:textSize="12dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/fecha_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:text="Fecha Hora"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:text="Id Ticket"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textColor="@color/darkGrayYLP"
                        android:fontFamily="@font/akzidenzgrotesk_regular"
                        android:textSize="12dp"/>
                </TableRow>

            </TableLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/sec_btn"
                android:layout_alignParentBottom="true">



                <ImageButton
                    android:id="@+id/btn_reimprimir"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:src="@drawable/ylp_ico_print"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>